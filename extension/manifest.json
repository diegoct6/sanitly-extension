{
  "manifest_version": 3,
  "name": "Sanitly",
  "version": "0.1",
  "description": "Detect & redact personal data (GDPR & CCPA)",

  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "side_panel": {
    "default_path": "panel.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
